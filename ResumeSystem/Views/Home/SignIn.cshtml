<section class="py-5 bg-dark">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card bg-dark-light border border-light-dark rounded-3 p-4">
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <h2 class="text-white">Sign In</h2>
                            <p class="text-secondary-light">Enter your credentials to access your account</p>
                        </div>
                        <form action="#" method="post">
                            <div class="position-relative mb-4">
                                <input class="form-control text-light fs-9 bg-transparent" type="email" name="email" placeholder="name@example.com" required="" />
                                <span class="position-absolute top-0 start-0 ms-3 px-1 fs-10 translate-middle-y fw-medium text-secondary-light bg-dark-light" for="email">Email address</span>
                            </div>
                            <div class="position-relative mb-4">
                                <input class="form-control text-light fs-9 bg-transparent" type="password" name="password" placeholder="••••••••" required="" />
                                <span class="position-absolute top-0 start-0 ms-3 px-1 fs-10 translate-middle-y fw-medium text-secondary-light bg-dark-light" for="password">Password</span>
                            </div>
                            <div class="d-flex justify-content-between mb-4"></div>
                            <button type="submit" class="btn btn-primary w-100 py-2 mb-3">Sign In</button>
                            <div class="text-center"></div>
                        </form>
                    </div>
                </div>
                <div class="text-center mt-4"></div>
            </div>
        </div>
    </div>
</section>
