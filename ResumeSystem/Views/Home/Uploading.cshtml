@{
    ViewData["Title"] = "Resume Upload";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <h1 class="display-4 text-white">Resume Upload</h1>
                <p class="text-secondary-light">Please upload your resume in .DOCX, .PDF, or .TXT format.</p>
            </div>
            <div class="bg-dark-light p-4 p-md-5 rounded-4 border border-light-dark shadow-sm">
                <h2 class="h4 text-white mb-4">Submit Your Resume</h2>
                <form asp-action="Uploading" method="post" enctype="multipart/form-data">
                    <div class="position-relative mb-4">
                        <input class="form-control text-light fs-6 bg-transparent" type="text" name="name" placeholder="Enter your full name" required />
                        <span class="position-absolute top-0 start-0 ms-3 px-1 fs-10 translate-middle-y fw-medium text-secondary-light bg-dark-light">Full Name</span>
                    </div>
                    <div class="position-relative mb-4">
                        <input class="form-control text-light fs-6 bg-transparent" type="email" name="email" placeholder="Enter your email address" required />
                        <span class="position-absolute top-0 start-0 ms-3 px-1 fs-10 translate-middle-y fw-medium text-secondary-light bg-dark-light">Email Address</span>
                    </div>
                    <div class="mb-4">
                        <label class="form-label text-secondary-light fs-10 mb-2">Resume Upload</label>
                        <input type="file" class="form-control bg-transparent text-light" name="resume" accept=".docx,.pdf,.txt" required />
                        <div class="form-text text-secondary-light mt-2">Accepted file formats: .DOCX, .PDF, .TXT</div>
                    </div>
                    <div class="text-center mt-5">
                        <button class="btn btn-primary px-5 py-3" type="submit">Upload Resume</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
