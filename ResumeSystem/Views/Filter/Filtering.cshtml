@model ResumeSystem.Models.ResumeFilterViewModel
@{
    ViewData["Title"] = "Filter Resumes";
}
<section>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark-light">
        <div class="container" type="button" aria-controls="nav01" aria-expanded="false">
            <a class="navbar-brand" href="#">
                <img class="img-fluid" src="trizzle-assets/logos/trizzle-logo.svg" alt="" />
            </a>
            <div class="collapse navbar-collapse" id="nav01">
                <div class="container mt-5">
                    <form asp-controller="FilterController"
                    asp-action="Index"
                    method="get"
                    class="row mb-4">

                        <div class="col-md-6">
                            <label asp-for="SelectedSkillID" class="form-label">
                                Skill
                            </label>
                            <div class="dropdown">
                                <!-- Searchable Input inside the button (user types here) -->
                                <input class="form-control dropdown-toggle" type="text" id="searchInput" placeholder="Search skill..." data-bs-toggle="dropdown" aria-expanded="false" autocomplete="off">

                                <!-- Dropdown Menu -->
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <!-- Loop over the Model.SkillOptions to display them dynamically -->
                                    @foreach (var skill in Model.SkillOptions)
                                    {
                                        <li><a class="dropdown-item" href="#" data-value="@skill.Value">@skill.Text</a></li>
                                    }
                                </ul>

                            </div>
                        </div>

                        <div class="col-md-6 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary">
                                Apply Filter
                            </button>
                        </div>
                        <!-- Tags will be shown here -->
                        <div id="selectedSkills" class="mt-2 d-flex flex-wrap gap-2"></div>

                        <!-- Hidden input to collect skill IDs for the form -->
                        <input type="hidden" name="SelectedSkillIDs" id="skillIdsInput" value="">
                    </form>

                    <h4 class="mb-3">Filtered Resumes</h4>
                    @if (Model.Resumes?.Any() ?? false)
                    {
                        <ul class="list-group">
                            @foreach (var r in Model.Resumes)
                            {
                                <li class="list-group-item">
                                    <strong>@r.Candidate.CAN_NAME</strong>
                                    <span class="text-muted">
                                        (@r.Candidate.CAN_EMAIL)
                                    </span>
                                    <br />
                                    <a href="@r.RESUME_URL" target="_blank">
                                        View Resume
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No resumes match your selected skill.</p>
                    }
                </div>
