@{
    ViewData["Title"] = "Mass Upload";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4 mb-5">
                <div class="card-body p-4 p-md-5">
                    <h1 class="display-4 text-center mb-4">Resume Upload Portal</h1>
                    <p class="text-center text-muted mb-5">Upload multiple resumes for quick processing</p>
                    <form id="resumeUploadForm" enctype="multipart/form-data" method="post">
                        <div class="mb-4">
                            <div class="position-relative">
                                <input type="text" class="form-control bg-transparent fs-5 py-3 px-3" id="name" name="name" required />
                                <span class="position-absolute top-0 start-0 ms-3 px-1 fs-10 translate-middle-y fw-medium text-secondary">Full Name</span>
                            </div>
                        </div>
                        <div class="mb-4">
                            <div class="position-relative">
                                <input type="email" class="form-control bg-transparent fs-5 py-3 px-3" id="email" name="email" required />
                                <span class="position-absolute top-0 start-0 ms-3 px-1 fs-10 translate-middle-y fw-medium text-secondary">Email Address</span>
                            </div>
                        </div>
                        <div class="mb-5">
                            <div class="position-relative">
                                <input type="file" class="form-control bg-transparent fs-5 py-3 px-3" id="resumeFile" name="resumeFile" accept=".pdf,.doc,.docx" multiple required />
                                <span class="position-absolute top-0 start-0 ms-3 px-1 fs-10 translate-middle-y fw-medium text-secondary bg-light">Upload Resumes</span>
                            </div>
                            <small class="text-muted d-block mt-2">Accepted formats: PDF, DOC, DOCX. Max 10MB per file.</small>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary px-5 py-3 fs-5 rounded-3" type="submit">Upload Resumes</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <h2 class="h3 mb-3">Uploaded Resumes</h2>
                </div>
                <div class="card-body p-4">
                    <div id="resumesList">
                        <div class="alert alert-info mb-0">No resumes have been uploaded yet. Use the form above to upload your first resume.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
